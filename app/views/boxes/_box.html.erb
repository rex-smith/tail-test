<div id="<%= dom_id box %>">
  <% if action_name != "show" %>
    <%= link_to "Show this box", box, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this box', edit_box_path(box), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
